	{% feedBlock
	title = "Articles",
	url = "/blog/" %}
	{% set blog = collections.blog | sliceCollection(3) %}
	{%- for post in blog %}
		{% feedItem
		title = post.data.title,
		url = post.url,
		excerpt = post.data.page.excerpt
 %}
	{%- endfor %}
	{% endfeedBlock %}

	{% feedBlock
	title = "Projects",
	url = "/projects/" %}
	{% set projects = collections.projects | sliceCollection(3) %}
	{%- for project in projects %}
		{% feedItem
		title = project.data.title,
		url = project.url,
		excerpt = project.data.page.excerpt
 %}
	{%- endfor %}
	{% endfeedBlock %}

	{% feedBlock
	title = "Notes",
	url = "/garden/" %}
	{% set notes = collections.garden | sliceCollection(3) %}
	{%- for note in notes %}
		{% feedItem
		title = note.data.title,
		url = note.url,
		excerpt = note.data.page.excerpt
 %}
	{%- endfor %}
	{% endfeedBlock %}

	{% feedBlock
	title = "Bookmarks",
	url = "/bookmarks/" %}
	{% set bookmarks = collections.bookmarks | sliceCollection(3) %}
	{%- for bookmark in bookmarks %}
		{% feedItem
		title = bookmark.data.title,
		url = bookmark.url,
		excerpt = bookmark.data.page.excerpt
 %}
	{%- endfor %}
	{% endfeedBlock %}
</div>