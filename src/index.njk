<section class="[ articles ] [ flow ]">
	<h2>
		<a href="/blog">Articles</a>
	</h2>
	{% set blog = collections.blog | sliceCollection(3) %}
	<ul class="[ flow ]">
		{%- for post in blog %}
			<li>
				<a href="{{ post.url | url }}">{{ post.data.title }}</a>
				<small>{{ post.data.page.excerpt }}</small>
			</li>
		{%- endfor %}
	</ul>
</section>

<section class="[ projects ] [ flow ]">
	<h2>
		<a href="/projects">Projects</a>
	</h2>
	{% set projects = collections.projects | sliceCollection(3) %}
	<ul class="[ flow ]">
		{%- for project in projects %}
			<li>
				<a href="{{ project.url | url }}">{{ project.data.title }}</a>
				<small>{{ project.data.page.excerpt }}</small>
			</li>
		{%- endfor %}
	</ul>
</section>

<section class="[ notes ] [ flow ]">
	<h2>
		<a href="/garden">Notes</a>
	</h2>
	{% set notes = collections.garden | sliceCollection(3) %}
	<ul class="[ flow ]">
		{%- for note in notes %}
			<li>
				<a href="{{ note.url | url }}">{{ note.data.title }}</a>
				<article class="card">{{ note.data.page.excerpt | md | safe }}</article>
			</li>
		{%- endfor %}
	</ul>
</section>

<section class="[ bookmarks ] [ flow ]">
	<h2>
		<a href="/bookmarks">Bookmarks</a>
	</h2>
	{% set bookmarks = collections.bookmarks | sliceCollection(3) %}
	<ul class="[ flow ]">
		{%- for bookmark in bookmarks %}
			<li>
				<a href="{{ bookmark.url | url }}">{{ bookmark.data.title }}</a>
				<small>{{ bookmark.data.page.excerpt }}</small>
			</li>
		{%- endfor %}
	</ul>
</section>