<li class="[ webmention ][ flow ]">
	<div class="[ meta ]">
		{% if mention.author %}
			<a href="{{ mention.author.url }}" class="[ author-wrapper ]">
				<sl-avatar
					class="[ author-photo-image ]"
					image="{{ mention.author.photo }}"
					initials="{{ mention.author.name[0] }}"
					label="{{ mention.author.name }}"></sl-avatar>
				<strong class="[ author-name ]">{{ mention.author.name }}</strong>
			</a>
		{% else %}
			<div class="[ author-photo-wrapper ]">
				<img src="/static/images/webmention-avatar-default.svg" alt="" class="[ author-photo-image ]" loading="lazy" decoding="async" width="48" height="48">
			</div>
			<strong class="[ author-name ]">Anonymous</strong>
		{% endif %}
		<small class="[ date ]">
			<a href="{{ mention.url }}">
				<sl-relative-time date="{{ mention.published }}"></sl-relative-time>
			</a>
		</small>
	</div>

	<p>{{ mention.content.value | safe }}</p>
</li>