{%- set absolutePageUrl -%}{{ page.url | url | absoluteUrl(site.url) }}{%- endset -%}
{%- set image = "/assets/img/ClubPenguin.png" -%}

{# General #}
<meta name="description" content="{{ description or site.description }}">
<link rel="canonical" href="{{ absolutePageUrl }}">
<meta name="author" content="{{ site.author.name }}">
<meta name="generator" content="{{ eleventy.generator }}">

{# Open Graph #}
<meta property="og:site_name" content="{{ site.title }}">
<meta property="og:title" content="{{ title or site.title }}">
<meta property="og:description" content="{{ description  or site.description }}">
<meta property="og:url" content="{{ absolutePageUrl }}">
<meta property="og:locale" content="{{ site.locale }}">
<meta name="twitter:card" content="{% if image -%}summary_large_image{% else %}summary{% endif %}">
{%- if image -%}
	<meta property="og:image" content="{{ image | url | absoluteUrl(site.url) }}">
	<meta property="og:image:alt" content="A digital drawing of a club penguin character stylised to look like Elly.">
{%- endif -%}

{# icons #}
<link rel="icon" href="{{ '/assets/img/icons/favicon.ico' | url }}" sizes="any">
<link rel="icon" href="{{ '/assets/img/icons/favicon.svg' | url }}" type="image/svg+xml">
<link rel="apple-touch-icon" href="{{ '/assets/img/icons/apple-touch-icon.png' | url }}">
<link rel="manifest" href="{{ '/manifest.webmanifest' | url }}">
<meta name="theme-color" content="#bd93f9">

{# RSS Feed #}
<link type="application/atom+xml" rel="alternate" href="{{ site.url }}/feed.xml" title="{{ site.title }}">