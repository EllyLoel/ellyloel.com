---
layout: base-without-header.njk
---

<header>
	<h1>{{ title }}</h1>
	<p>
		<sl-icon library="fa" name="far-calendar-plus" label="Last modified"></sl-icon>
		<time class="[ date ]" datetime="{{ page.date | dateToISO }}">{{ page.date | dateToLocaleDateFull }}</time>
	</p>
</header>
<aside class="[ toc-container ][ flow content-width ]">
	<details>
		<summary class="[ flex ]">
			<sl-icon library="fa" name="fas-play" label=""></sl-icon>
			<h2>Table of contents</h2>
		</summary>
		{{ content | toc | safe }}
	</details>
</aside>
<article class="[ flow content-width ]">
	{{ content | safe }}
</article>
{% if backlinks === [] %}
	<aside class="[ flow content-width ]">
		<h2>Backlinks</h2>
		<ul class="[ flow ]">
			{% for link in backlinks %}
				<li>
					<details>
						<summary>
							{{ link.title }}
						</summary>
						{{ link.excerpt }} &#8230;
				<br/>
						<a href="{{ link.url }}">Read more <span class="[ visually-hidden ]">about {{ link.title }}</span>
						</a>
					</details>
				</li>
			{% endfor %}
		</ul>
	</aside>
{% endif %}