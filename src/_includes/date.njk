<span>
	<sl-tooltip content="{{ label }} {{ date | dateToLocaleDateFull }}">
		<span class="[ flex align-center gap-1ch ]">
			<sl-icon class="[ inline-icon ]" library="fa" name="far-calendar{%- if label === "Last modified" -%}-plus{%- endif -%}" label="{{ label }}"></sl-icon>
			<time class="[ {% if label === "Created" %}dt-published{% else %}dt-updated{% endif %} ]" datetime="{{ date | dateToISO }}">{{ date | dateToRelative }}</time>
		</span>
	</sl-tooltip>
</span>
