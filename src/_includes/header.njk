<header class="[ site-head ] [ wrapper ]" style="--wrapper-size: 100ch;">
	<div class="[ inner ]">
		<div class="[ flex align-center gap-3 ]">
			<!-- link to home: http://microformats.org/wiki/rel-home -->
			<a href="/" rel="home" class="[ u-url u-uid ] [ text-decoration-none ]"{% if page.url === "/" %} data-state="active" aria-current="page"{% endif %}>
				<span class="[ logo ]" aria-hidden="true" title="Elly">
					&lt;e//y&gt;
				</span>
				<span class="[ p-name ] [ visually-hidden ]">
					Elly<span aria-hidden="true"> Loel</span>
				</span>
			</a>

			<sl-tooltip content="Disable sounds">
				<sl-icon-button
					id="sound-button"
					library="fa"
					name="fas-volume-high"
					label="Disable sounds"
				></sl-icon-button>
			</sl-tooltip>

			<sl-tooltip content="Switch color scheme">
				<sl-icon-button
					id="color-scheme-switcher-dialog-open-button"
					library="fa"
					name="fas-palette"
					label="Open color scheme switcher"
				></sl-icon-button>
			</sl-tooltip>
			{% include "color-scheme-switcher.njk" %}
		</div>

		{% include "navigation.njk" %}
	</div>
</header>