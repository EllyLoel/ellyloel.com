<footer>

	{% include "newsletter.njk" %}

	<div class="[ site-footer ]">
		<css-doodle click-to-update aria-hidden="true">
		:doodle {
			@grid: 20 / 100vw 100%;
			background: var(--neutral-base);
			font-family: sans-serif;
			overflow: hidden;
		}
		:after {
			content: \@hex.@r(0x2500, 0x257f);
			color: var(--accent-@round.@rand(0, 3));
			font-size: 8vmin;
		}
	</css-doodle>
		<div class="[ inner ] [ wrapper ]" style="--wrapper-size: 100ch;">

			{% image
			"./src/assets/img/coding.png",
			"A digital drawing of me, a blonde woman in a white sweater with headphones on sitting at my desk in front of a keyboard and monitor coding."
 %}

			<div class="[ sitemap ] [ flow ]">
				<h2>Sitemap</h2>
				<ul class="[ flow ]">
					{%- for entry in collections.all | eleventyNavigation -%}
						{%- if entry.url === "/me/" or entry.url === "/writing/" -%}
									{%- for child in entry.children %}
										<li>
											<a href="{{ child.url | url }}"{% if child.url === page.url %} aria-current="page"{% endif %}>
												{{ child.title }}
											</a>
										</li>
									{%- endfor -%}
						{%- else -%}
							<li>
								<a href="{{ entry.url | url }}"{% if entry.url === page.url %} aria-current="page"{% endif %}>
									{{ entry.title }}
								</a>
							</li>
						{%- endif -%}
					{%- endfor -%}
				</ul>
			</div>

			<ul role="list" class="[ social-links ]">
				<li>
					<sl-tooltip content="Elly">
						<sl-icon-button class="[ logo-link ]" src="/assets/svg/elly.svg" label="to homepage" href="/"{% if page.url === "/" %} aria-current="page"{% endif %}></sl-icon-button>
					</sl-tooltip>
				</li>
				<li>
					<sl-tooltip content="Mastodon">
						<sl-icon-button library="fa" name="fab-mastodon" label="Mastodon" href="https://front-end.social/@elly"></sl-icon-button>
					</sl-tooltip>
				</li>
				<li>
					<sl-tooltip content="Twitter">
						<sl-icon-button library="fa" name="fab-twitter" label="Twitter" href="https://twitter.ellyloel.com"></sl-icon-button>
					</sl-tooltip>
				</li>
				<li>
					<sl-tooltip content="Linkedin">
						<sl-icon-button library="fa" name="fab-linkedin" label="Linkedin" href="https://elly.to/linkedin"></sl-icon-button>
					</sl-tooltip>
				</li>
				<li>
					<sl-tooltip content="Codepen">
						<sl-icon-button library="fa" name="fab-codepen" label="Codepen" href="https://elly.to/codepen"></sl-icon-button>
					</sl-tooltip>
				</li>
				<li>
					<sl-tooltip content="Dribbble">
						<sl-icon-button library="fa" name="fab-dribbble" label="Dribbble" href="https://elly.to/dribbble"></sl-icon-button>
					</sl-tooltip>
				</li>
			</ul>

			<div class="[ gh-edit ]">
				{% gh_edit page %}
			</div>
		</div>
	</div>
</footer>
