---
layout: base-without-header.njk
---
<header class="[ main-header ][ padding-block-end-6 gradient-border ]" data-gradient-border="block-end">
	<!-- tabindex fixes focus issue: https://benmyers.dev/blog/skip-links/#tldr -->
	<h1
		id="content"
		tabindex="-1"
		class="
			{%- if page.url === "/garden/" or page.url === "/microposts/" -%}
				[ p-name ]
			{%- endif -%}
			[ margin-0 line-height-1 ]
		"
	>
		{{ title }}
	</h1>
</header>
<article class="[ markdown-container ][ flow ]">
	{% if content | includes("<!-- intro -->") %}
	<div class="[ intro ][ flow ]">
		{{ content | split("<!-- intro -->") | first | safe }}
	</div>
	<div class="[ flow ]">
		{{ content | split("<!-- intro -->") | last | safe }}
	</div>
	{% else %}
	<div class="[ flow ]">
		{{ content | safe }}
	</div>
	{% endif %}
</article>
